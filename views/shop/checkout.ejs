<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">

    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <ul class="cart__item-list">
                    <% books.forEach(b => { %>
                        <li class="cart__item">
                            <h1><%= b.bookId.title %></h1>
                            <h2>Quantity: <%= b.quantity %></h2>
                            
                        </li>
                    <% }) %>
                </ul>
			<div class="centered">
				<h2>
					Total:<%=totalSum %>
				</h2>
			</div>
			<div class="centered">
				<button id="order-btn" class="btn">
					ORDER
				</button>
				<script src="https://js.stripe.com/v3/"></script>
				<script>var stripe=Stripe('pk_test_51IIwkrIAShPifzT0RoYE8hSvu19S6WxsyV6aHEoojUwm9Cn2IqjbWz1fcJLu42eSuPU9A1ufG4EYWnlAtFKZRFhh00SscdgNat');
				var orderBtn = document.getElementById('order-btn');
				orderBtn.addEventListener('click',function(){
					stripe.redirectToCheckout({
						sessionId:'<%= sessionId %>'
					});
				});</script>
			</div>
        </main>
        <%- include('../includes/end.ejs') %>

